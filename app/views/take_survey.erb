
<div class="container">
  <h2><%= @survey.title %></h2>
  Questions:
<ul>

    <form name="input" action="/surveys/take" method="post">
      <!-- will add more to form element above -->
      <ul>
        <% @question.each_with_index do |question, question_index| %>
        <!-- for each question do: -->
          <li>
              <%= question.question_text %><br>
              <!-- show question title -->
            <ul>
              <% question.choices.each do |choice, choice_index| %>
                <li>
                  <!-- show radio button choice -->
                  <input type="radio" name="<%= question.id %>" value=" <%= choice.id %>" >
                  <!-- value will = choice.choice_text -->
                  <%= choice.choice_text %> <br>
                </li>
              <% end %>
            </ul><br>
          </li>
        <% end %>
      </ul>
      <input type="submit" value="Submit">
    </form>
  </ul>
</div>
