<div class="container">
  <h2><%= @survey.title %>:</h2>
  <ul>
    <% @question.each do |question| %>
      <li>
          <%= question.question_text %><br>
        <ul>
          <% question.choices.each do |choice| %>
            <li>
              <%= choice.choice_text %><br>
            </li>
          <% end %>
        </ul><br>
      </li>
    <% end %>
  </ul>
</div>